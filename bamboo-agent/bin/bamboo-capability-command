#!/bin/bash

set -e # Exit on errors

if [ -z "$1" ]; then
	echo "Usage: bamboo-capability-command <cmd>[=<label>] [<cmd>=[<label>], ...]"
  exit 1
fi

for arg in $*
do
  arg=(${arg//=/ })
  cmd=${arg[0]}
  label=${arg[1]:-$cmd}
  echo bamboo-capability "system.builder.command.$label" "`which $cmd`"
done

exit 0
